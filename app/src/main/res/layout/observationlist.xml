<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/species_nameText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/observationThumbnail"
        android:textSize="30sp"
        fontPath="fonts/Snippet.ttf"
        android:paddingTop="5sp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/observationThumbnail" />

    <TextView
        android:id="@+id/notesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a comment."
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:layout_below="@+id/species_nameText"
        android:layout_toRightOf="@+id/observationThumbnail"
        android:layout_toEndOf="@+id/observationThumbnail"
        android:layout_alignBottom="@+id/observationThumbnail" />

    <TextView
        android:id="@+id/syncstatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notesText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15sp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Not synced" />

    <ImageView
        android:id="@+id/observationThumbnail"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</TwoLineListItem>