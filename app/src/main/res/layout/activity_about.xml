<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luminousid.luminousid.AboutActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/EduandOutHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="Goals"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/EduandOutTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="The goals of this website and app are to a) increase citizen engagement at the Long-Term Ecological Research site on Niwot Ridge, and b) build up a geographic and photographic dataset of plant species, in order to record how species’ geographic distributions and phenology (timing of flowering) are shifting with climatic changes."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DesignandDevHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath = "fonts/Snippet.ttf"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Design and development"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/DesignandDevTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This website and app was designed and developed during a two-year collaboration between the Computer Science Department, the Environmental Studies Program, and the Institute of Arctic and Alpine Research at the University of Colorado, Boulder. The species in the field guides are a representative, but not exhaustive, list of species growing at the University of Colorado’s Mountain Research Station and Niwot Ridge."
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/DevHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Developers"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/DevTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ryan O’Connell \nChase Springer\nD’Vreux Fontaine\nBrian Larson\nKevin Rau\nJennifer Baumann "
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/CollabHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:text="In Collaboration With"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/CollabTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nathalie Chardon\nJane Smith"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/SupportHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:text="Support"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/SupportTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This project has been made possible with support from the National Science Foundation via a Long Term Research in Environmental Biology grant to DF Doak and WF Morris and the Long Term Ecological Research (LTER) program at Niwot Ridge. The United States Geological Survey provided the topographical maps."
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Images"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_gravity="center"
                fontPath="fonts/Snippet.ttf" />

            <TextView
                android:id="@+id/ImageUseHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image Use"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                fontPath="fonts/Snippet.ttf" />

            <TextView
                android:id="@+id/ImageUseTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp"
                android:text="Images included in this website and app have been made freely available by their owners for education and research purposes. Contributors retain the full copyright for their images. Images may be used only in unmodified form for personal or educational use and are NOT available for commercial use unless permission is first obtained from the copyright holder. Any image used in a non-commercial publication, report, or as a web link, must credit the photographer or artist, as well as the name of the website hosting the image." />

            <TextView
                android:id="@+id/IllustHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Illustration Credit"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                fontPath="fonts/Snippet.ttf" />

            <TextView
                android:id="@+id/IllustTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="All illustrations included in the Luminous ID app were created by Jane G. Smith." />

            <TextView
                android:id="@+id/PhotoCredsHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photo Credits"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                fontPath="fonts/Snippet.ttf" />

            <LinearLayout
                android:id="@+id/PhotoCredsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BioPix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="*Biopix: A. Neuman, J.C. Schou | http://calphotos.berkeley.edu"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:autoLink="web"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Bowman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="William D. Bowman"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/CalPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:autoLink="web"
                    android:text="*CalPhotos Photo Database: B. Anacker, B. Breckling, R. T. Hawke, S. Matson, K. Morse, A. Schusteff, D. Wm. Taylor, A. Trnkoczy | http://calphotos.berkeley.edu" />

                <TextView
                    android:id="@+id/NIChardon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="N. I. Chardon" />

                <TextView
                    android:id="@+id/MohlenbrockUSDA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="*R. H. Mohlenbrock, USDA-NRCS PLANTS Database | USDA NRCS. 1992. Western wetland flora: Field office guide to plant species. West Region, Sacramento"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/LicherSein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="*SEINet data portal, Arizona - New Mexico Chapter: P. J. Alexander, T. Ayers, B. Gratwicke, L. R. Landrum, M. Licher |http://swbiodiversity.org"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:autoLink="web"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/JGSmith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="J. G. Smith" />

                <TextView
                    android:id="@+id/NYBotanical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="The New York Botanical Garden" />

                <TextView
                    android:id="@+id/ShawUSDA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="*USDA-NRCS PLANTS Database | E.G. Hurd, N.L. Shaw, J. Mastrogiuseppe, L.C. Smithman and S. Goodrich. 1998. Field guide to Intermountain sedges. General Technical Report RMS-GTR-10. USDA Forest Service, RMRS, Ogden." />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
