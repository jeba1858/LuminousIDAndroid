<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:configChanges="orientation"
    android:screenOrientation="portrait"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luminousid.luminousid.HowToActivity">

    <Button
        android:id="@+id/howtoButton"
        fontPath="fonts/Snippet.ttf"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:text="About Us" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/howtoButton">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/HowToHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="How To Use"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/IdentifyHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="left"
                android:text="Identify"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/IdentifyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Use the filter function in the field guide to narrow down the list of possible species you are looking at during your research visit or hike to the Mountain Research Station and Niwot Ridge."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ShareHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Share"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/ShareTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record the plants you observe with the app, and once you are back with cell reception or wifi your observations can be uploaded to the website from the 'My Observations' page. The more observations we get from you, the better Niwot Ridge scientists will be able to carry out their research on how species are responding to climate change!"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ExploreHead"
                fontPath="fonts/Snippet.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Explore"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/ExploreTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="Go to https://luminousid.org to see observations from other users."
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
