<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#384452"
    tools:context="com.luminousid.luminousid.plantDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/plantdividerspace"
            android:dividerPadding="5dp"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addObsButton"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:text="ADD OBSERVATION"
                    fontPath="fonts/Snippet.ttf"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/mapButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FIND PLANT"
                    fontPath="fonts/Snippet.ttf"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/PlantImage"
                android:layout_width="match_parent"
                android:layout_height="238dp"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/SpeciesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blank Name"
                fontPath="fonts/Snippet.ttf"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/CommonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Common name: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/Synonyms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Synonyms: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/GrowthForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Growth form: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/FamilyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family name: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/Awns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Awns: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/Inflorescence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inflorescence: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/FloretsPerSpikelet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Florets per Spikelet: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/LeafBlade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leaf Blade: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/StemCrossSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stem Cross Section: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/Habitat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitat: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/PhotoCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photo Credit: "
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes: "
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
